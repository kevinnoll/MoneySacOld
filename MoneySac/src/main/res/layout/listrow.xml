<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    android:padding="5dp"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textViewListRowDate"
        android:layout_weight=".15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:text="when"/>

    <TextView
        android:id="@+id/textViewListRowDesc"
        android:layout_weight=".55"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:text="What?"/>

    <TextView
        android:id="@+id/textViewListRowAmount"
        android:layout_weight=".2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:text="Amount"/>

    <TextView
        android:id="@+id/textViewListRowEuro"
        android:layout_weight=".05"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:text=" â‚¬"/>

    <ImageView
        android:id="@+id/imageViewListRowArrow"
        android:layout_width="0dp"
        android:layout_weight=".05"
        android:paddingTop="5dp"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_green"/>
